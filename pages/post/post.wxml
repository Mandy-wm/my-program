<!--pages/post/post.wxml-->
<!-- 不要在template和block上注册事件，因为编译后 ，template和block都会消失 -->
<import src="post-item/post-item-tpl.wxml"/>
<view>
  <swiper catchtap="onSwiperTap" indicator-dots="true" autoplay="ture" interval="3000" >
    <swiper-item>
      <image src="../images/post/1.jpg" data-post-id="1"></image>
    </swiper-item>
    <swiper-item>
      <image src="../images/post/2.jpg" data-post-id="2"></image>
    </swiper-item>
    <swiper-item>
      <image src="../images/post/3.jpg" data-post-id="3"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx">
   <view catchtap="onTapToDetail" data-post-id="{{item.postId}}" >
    <template is="postItemTpl" data="{{...item}}"></template>  
  </view>
   
</block> 
</view>
